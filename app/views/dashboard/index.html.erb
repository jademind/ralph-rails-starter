<div class="container mx-auto px-4 py-16">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8"><%= t("dashboard.index.title") %></h1>

    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <h2 class="text-2xl font-semibold mb-4"><%= t("dashboard.index.welcome") %></h2>
      <p class="text-gray-600 mb-2">
        <%= t("dashboard.index.email") %>: <span class="font-medium"><%= Current.session.user.email_address %></span>
      </p>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-semibold mb-4"><%= t("dashboard.index.quick_actions") %></h2>
      <div class="space-y-2">
        <%= link_to t("dashboard.index.view_users"), users_path, class: "block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition text-center" %>
        <%= link_to t("dashboard.index.edit_profile"), edit_user_path(Current.session.user), class: "block bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300 transition text-center" %>
      </div>
    </div>
  </div>
</div>
