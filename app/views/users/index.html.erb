<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= t("users.index.title") %></h1>

  <div class="bg-white shadow-md rounded-lg overflow-hidden">
    <table class="min-w-full">
      <thead class="bg-gray-100">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("users.index.email_header") %></th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t("users.index.actions_header") %></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @users.each do |user| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= link_to user.email_address, user, class: "text-blue-600 hover:text-blue-800" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm">
              <%= link_to t("actions.view"), user, class: "text-blue-600 hover:text-blue-800 mr-3" %>
              <% if policy(user).edit? %>
                <%= link_to t("actions.edit"), edit_user_path(user), class: "text-green-600 hover:text-green-800 mr-3" %>
              <% end %>
              <% if policy(user).destroy? %>
                <%= link_to t("actions.delete"), user, data: { turbo_method: :delete, turbo_confirm: t("users.index.confirm_delete") }, class: "text-red-600 hover:text-red-800" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
