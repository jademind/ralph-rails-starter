<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto bg-white shadow-md rounded-lg p-6">
    <h1 class="text-3xl font-bold mb-6"><%= t("users.show.title") %></h1>

    <div class="mb-4">
      <label class="block text-gray-700 font-bold mb-2"><%= t("users.show.email_address") %></label>
      <p class="text-gray-900"><%= @user.email_address %></p>
    </div>

    <div class="flex space-x-4 mt-6">
      <% if policy(@user).edit? %>
        <%= link_to t("users.show.edit_profile"), edit_user_path(@user), class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
      <% end %>
      <% if policy(@user).destroy? %>
        <%= link_to t("users.show.delete_account"), @user, data: { turbo_method: :delete, turbo_confirm: t("users.show.confirm_delete") }, class: "bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700" %>
      <% end %>
      <%= link_to t("users.show.back_to_users"), users_path, class: "bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300" %>
    </div>
  </div>
</div>
